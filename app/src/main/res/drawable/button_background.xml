<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the desired background color when button is pressed -->
            <corners android:radius="20dp" /> <!-- Set the desired border radius in dp -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color ="#00BFA6" /> <!-- Set the desired background color when button is not pressed -->
            <corners android:radius="20dp" /> <!-- Set the desired border radius in dp -->
        </shape>
    </item>
</selector>
